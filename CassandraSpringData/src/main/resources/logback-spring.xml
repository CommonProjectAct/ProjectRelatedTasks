<?xml version="1.0" encoding="UTF-8"?><configuration>	<property name="KROGER_LOG_PATTERN"		value="%d{HH:mm:ss.SSS} [%thread] %-5level [%X{X-B3-TraceId:-},%X{X-B3-SpanId:-},%X{X-Span-Export:-}] %logger{36} - %msg%n" />	<property name="KROGER_LOG_PATH" value="C:/opt/java/microservices/KrogerService/logs" />	<appender name="FILE"		class="ch.qos.logback.core.rolling.RollingFileAppender">		<file>${KROGER_LOG_PATH}/KROGER.log</file>		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">			<fileNamePattern>${KROGER_LOG_PATH}/kroger.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>			<maxHistory>7</maxHistory>			<timeBasedFileNamingAndTriggeringPolicy				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">				<maxFileSize>10MB</maxFileSize>			</timeBasedFileNamingAndTriggeringPolicy>		</rollingPolicy>		<encoder>			<pattern>${KROGER_LOG_PATTERN}</pattern>		</encoder>	</appender>	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">		<encoder>			<pattern>${KROGER_LOG_PATTERN}</pattern>		</encoder>	</appender>	<springProfile name="LT,STAGE,PROD">		<logger name="com.kroger" level="INFO"			additivity="false">			<appender-ref ref="STDOUT" />			<appender-ref ref="FILE" />		</logger>		<logger name="com.kroger" level="ERROR" additivity="false">			<appender-ref ref="STDOUT" />			<appender-ref ref="FILE" />		</logger>	</springProfile>	<springProfile name="TEST,UAT">		<logger name="com.kroger" level="INFO"			additivity="false">			<appender-ref ref="STDOUT" />			<appender-ref ref="FILE" />		</logger>		<logger name="com.kroger" level="ERROR" additivity="false">			<appender-ref ref="STDOUT" />			<appender-ref ref="FILE" />		</logger>	</springProfile>	<springProfile name="DEV">		<logger name="com.kroger" level="INFO" additivity="false">			<appender-ref ref="STDOUT" />			<appender-ref ref="FILE" />		</logger>	</springProfile>	<logger name="org.springframework" level="WARN" />	<logger name="ch.qos.logback.core" level="WARN" />	<logger name="ch.qos.logback.classic" level="WARN" />	<root level="INFO">		<appender-ref ref="STDOUT" />		<appender-ref ref="FILE" />	</root></configuration>